FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
#include        "../Inputs"
dimensions      [0 1 -1 0 0 0 0];

internalField   uniform ($UX $UZ 0);

boundaryField
{
    farfield
    {
        type            inletOutlet;
        inletValue      $internalField;
        value           $internalField;
    }

    airfoil
    {
        type            noSlip;
    }

    leftAndRight
    {
        type            empty;
    }
}


